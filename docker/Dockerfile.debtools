# Debian packaging environment for cockpit-authelia-users
#
# Used for building .deb packages.

FROM debian:trixie

RUN apt-get update && apt-get install -y \
    build-essential \
    devscripts \
    debhelper \
    dh-python \
    python3-all \
    python3-yaml \
    python3-argon2 \
    python3-systemd \
    npm \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /workspace

CMD ["/bin/bash"]
